<UserControl x:Class="WPF.Views.HierarchyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:WPF.Views" xmlns:subjects="clr-namespace:WPF.ViewModels.Subjects" xmlns:topics="clr-namespace:WPF.ViewModels.Topics"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TreeView Grid.Row="0"
              ItemsSource="{Binding SubjectsVM.Subjects}" 
              SelectedItemChanged="{Binding SubjectsVM.SelectedSubject, Mode=TwoWay}"
              Margin="0,0,0,5">

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type subjects:SubjectViewModel}" 
                                       ItemsSource="{Binding Topics}">
                    <TextBlock Text="{Binding Title}" />
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type topics:TopicViewModel}">
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </TreeView.Resources>

        </TreeView>

        <Button Grid.Row="1"
            Content="Tárgy hozzáadása"
            Command="{Binding AddSubjectCommand}"
            Padding="10,5"
            Margin="5"/>

        <Grid Grid.RowSpan="2" 
          Visibility="{Binding IsAddingSubject, Converter={StaticResource BooleanToVisibilityConverter}}"
          Background="#B0000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

            <Border Width="400" Height="250" 
                Background="{DynamicResource WindowBackgroundBrush}"
                CornerRadius="10"
                Padding="15"
                BorderBrush="{DynamicResource AccentColorBrush}"
                BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center">

                <views:SubjectDetailView DataContext="{Binding SubjectDetailVM}" />
            </Border>
        </Grid>

    </Grid>
</UserControl>
<UserControl x:Class="WPF.Views.QuestionListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Kérdések generálása"
                Command="{Binding GenerateQuestionsCommand}"
                HorizontalAlignment="Right"
                Margin="0,0,0,10" />

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,8" Padding="10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="{Binding Text}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding QuestionType}" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding Answers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="• " FontWeight="{Binding IsCorrect, Converter={StaticResource BoolToFontWeightConverter}}">
                                                <Run Text="{Binding Text}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

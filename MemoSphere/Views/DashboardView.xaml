<UserControl x:Class="WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dashboardVM="clr-namespace:WPF.ViewModels.Dashboard"
             xmlns:converters="clr-namespace:WPF.Utilities"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=dashboardVM:DashboardViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F8FAFC">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisConverter" />

        <!-- Animált kártya stílus -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Color="#1E293B"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.12" Color="#1E293B"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Gradiens progress bar -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Border x:Name="PART_Track" CornerRadius="5"/>
                                <Border x:Name="PART_Indicator"
                                        CornerRadius="5"
                                        HorizontalAlignment="Left">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Offset="0"/>
                                            <GradientStop Color="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource LightenColorConverter}}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat kártya stílus -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40,32,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header szekció gradienssel -->
            <Border Grid.Row="0" 
                    CornerRadius="24" 
                    Margin="0,0,0,32"
                    Padding="32,28">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="👋" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Üdv újra!" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Folytasd a kitartó munkát! Nézd meg mai haladásod és aktív céljaid." 
                               FontSize="15" 
                               Foreground="#E0E7FF" 
                               TextWrapping="Wrap"
                               Opacity="0.95"/>
                </StackPanel>
            </Border>

            <!-- Összesített statisztikák -->
            <Grid Grid.Row="1" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Összesített cél kártya -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Border Background="#EEF2FF" CornerRadius="12" Padding="10" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Target" Width="24" Height="24" Foreground="#6366F1"/>
                            </Border>
                        </Grid>
                        <TextBlock Text="Napi Haladás" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBlock FontSize="32" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,4">
                            <Run Text="{Binding TotalTodayAnswered, Mode=OneWay}"/>
                            <Run Text="/" FontSize="24" Foreground="#94A3B8"/>
                            <Run Text="{Binding TotalDailyGoal, Mode=OneWay}" FontSize="24" Foreground="#94A3B8"/>
                        </TextBlock>
                        <ProgressBar Value="{Binding TotalProgressPercentage, Mode=OneWay}"
                                     Height="8"
                                     Background="#E2E8F0"
                                     BorderThickness="0"
                                     Foreground="#6366F1"
                                     Margin="0,12,0,0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <Border x:Name="PART_Indicator"
                                                            CornerRadius="4"
                                                            HorizontalAlignment="Left">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                <GradientStop Color="#6366F1" Offset="0"/>
                                                                <GradientStop Color="#8B5CF6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                        <TextBlock Text="{Binding TotalProgressPercentage, StringFormat={}{0:0}% teljesítve, Mode=OneWay}"
                                   FontSize="12"
                                   Foreground="#6366F1"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Aktív témák száma -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Border Background="#DBEAFE" CornerRadius="12" Padding="10" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="BookOpenVariant" Width="24" Height="24" Foreground="#3B82F6"/>
                            </Border>
                        </Grid>
                        <TextBlock Text="Aktív Témák" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="{Binding ActiveTopics.Count, Mode=OneWay}" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="#1E293B"/>
                            <TextBlock Text=" téma" 
                                       FontSize="18" 
                                       Foreground="#94A3B8" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,6"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Legjobb sorozat -->
                <Border Grid.Column="2" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Border Background="#FEF3C7" CornerRadius="12" Padding="10" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Fire" Width="24" Height="24" Foreground="#F59E0B"/>
                            </Border>
                        </Grid>
                        <TextBlock Text="Leghosszabb Sorozat" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="🔥" FontSize="28" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding OverallStreak, Mode=OneWay}" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="#1E293B"/>
                            <TextBlock Text=" nap" 
                                       FontSize="18" 
                                       Foreground="#94A3B8" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,6"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Szekció cím -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <Border Background="#EEF2FF" CornerRadius="10" Padding="8" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="ChartBoxOutline" Width="22" Height="22" Foreground="#6366F1"/>
                    </Border>
                    <TextBlock Text="Témáid Részletes Haladása" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#1E293B"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Témák grid -->
            <Grid Grid.Row="3">

                <!-- Üres állapot -->
                <Border Background="#FEF9C3" 
                        BorderBrush="#EAB308"
                        BorderThickness="2"
                        CornerRadius="16" 
                        Padding="28,24"
                        MaxWidth="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Visibility="{Binding ActiveTopics.Count, Converter={StaticResource InvertedBoolToVisConverter}, Mode=OneWay}">
                    <StackPanel>
                        <TextBlock Text="📚" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Még nincs aktív témád" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#854D0E"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="#92400E" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center">
                            <Run Text="Látogass el a"/>
                            <Run Text="Böngésző" FontWeight="Bold"/>
                            <Run Text="nézetbe és aktiválj egy témát a"/>
                            <Run Text="⭐" FontWeight="Bold"/>
                            <Run Text="csillag ikonnal!"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Témák listája -->
                <ItemsControl ItemsSource="{Binding ActiveTopics}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DashboardCard}"
                                    Width="380"
                                    MinHeight="200">
                                <StackPanel>
                                    <!-- Fejléc sorozattal -->
                                    <Grid Margin="0,0,0,20">
                                        <TextBlock Text="{Binding TopicName}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#1E293B"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="240"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Border Background="#FEF3C7" 
                                                CornerRadius="10" 
                                                Padding="12,6"
                                                HorizontalAlignment="Right">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🔥" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CurrentStreak}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="#F59E0B"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Napi haladás -->
                                    <Border Background="#F8FAFC" 
                                            CornerRadius="12" 
                                            Padding="16,14"
                                            Margin="0,0,0,16">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <TextBlock FontSize="13" 
                                                           Foreground="#64748B"
                                                           FontWeight="Medium">
                                                    <Run Text="Mai cél"/>
                                                </TextBlock>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock FontSize="18" FontWeight="Bold" Foreground="#10B981">
                                                        <Run Text="{Binding TodayQuestionsAnswered, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="/" 
                                                               FontSize="14" 
                                                               Foreground="#94A3B8"
                                                               Margin="3,0"/>
                                                    <TextBlock Text="{Binding DailyGoalQuestions, Mode=OneWay}"
                                                               FontSize="14"
                                                               Foreground="#64748B"/>
                                                </StackPanel>
                                            </Grid>
                                            <ProgressBar Value="{Binding DailyProgressPercentage, Mode=OneWay}"
                                                         Height="8"
                                                         Background="#E2E8F0"
                                                         BorderThickness="0"
                                                         Margin="0,0,0,8">
                                                <ProgressBar.Style>
                                                    <Style TargetType="ProgressBar">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ProgressBar">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                        <Border x:Name="PART_Indicator"
                                                                                CornerRadius="4"
                                                                                HorizontalAlignment="Left">
                                                                            <Border.Background>
                                                                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                                    <GradientStop Color="#10B981" Offset="0"/>
                                                                                    <GradientStop Color="#34D399" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Border.Background>
                                                                        </Border>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ProgressBar.Style>
                                            </ProgressBar>
                                            <TextBlock Text="{Binding DailyProgressPercentage, StringFormat={}{0:0}% teljesítve, Mode=OneWay}"
                                                       FontSize="11"
                                                       Foreground="#10B981"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Elsajátítás -->
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <TextBlock Text="Elsajátítás" 
                                                       FontSize="13" 
                                                       Foreground="#64748B"
                                                       FontWeight="Medium"/>
                                            <TextBlock Text="{Binding MasteryPercentage, StringFormat={}{0:0}%, Mode=OneWay}"
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="#F59E0B"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                        <ProgressBar Value="{Binding MasteryPercentage, Mode=OneWay}"
                                                     Height="8"
                                                     Background="#E2E8F0"
                                                     BorderThickness="0">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ProgressBar">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                    <Border x:Name="PART_Indicator"
                                                                            CornerRadius="4"
                                                                            HorizontalAlignment="Left">
                                                                        <Border.Background>
                                                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                                <GradientStop Color="#F59E0B" Offset="0"/>
                                                                                <GradientStop Color="#FBBF24" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Border.Background>
                                                                    </Border>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

        </Grid>
    </ScrollViewer>
</UserControl>
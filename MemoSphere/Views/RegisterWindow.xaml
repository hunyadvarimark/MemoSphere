<Window x:Class="MemoSphere.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MemoSphere - Register"
        Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="30,40,30,30">
            <StackPanel>
                <TextBlock Text="MemoSphere" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Generative Study Tool" 
                          FontSize="16" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Opacity="0.9"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Register Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    Margin="30,30,30,30" 
                    Padding="35,30,35,35"
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Create Account" 
                              FontSize="26" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,25"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                              FontSize="14" 
                              FontWeight="Medium"
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox"
                            Height="44"
                            Padding="12"
                            FontSize="14"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            VerticalContentAlignment="Center"
                            Margin="0,0,0,18">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             Margin="12,0"
                                                             VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Password -->
                    <TextBlock Text="Password" 
                              FontSize="14" 
                              FontWeight="Medium"
                              Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox"
                                Height="44"
                                Padding="12"
                                FontSize="14"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,18">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="White"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             Margin="12,0"
                                                             VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Confirm Password -->
                    <TextBlock Text="Confirm Password" 
                              FontSize="14" 
                              FontWeight="Medium"
                              Margin="0,0,0,8"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                Height="44"
                                Padding="12"
                                FontSize="14"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,10">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="White"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             Margin="12,0"
                                                             VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Password Requirements -->
                    <TextBlock Text="Minimum 6 characters required" 
                              FontSize="12"
                              Foreground="#666"
                              Margin="0,0,0,15"/>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessage"
                              Foreground="#E53935"
                              FontSize="13"
                              TextWrapping="Wrap"
                              Margin="0,0,0,15"
                              Visibility="Collapsed"/>

                    <!-- Register Button -->
                    <Button x:Name="RegisterButton"
                           Content="Create Account"
                           Height="48"
                           Background="#2196F3"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="RegisterButton_Click"
                           Margin="0,5,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Back to Login Link -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0">
                        <TextBlock Text="Already have an account? " 
                                  FontSize="14"
                                  Foreground="#666"/>
                        <TextBlock Text="Sign In" 
                                  FontSize="14"
                                  Foreground="#2196F3"
                                  FontWeight="SemiBold"
                                  Cursor="Hand"
                                  MouseLeftButtonDown="SignInLink_Click">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <TextBlock x:Name="LoadingIndicator"
                              Text="Creating account..."
                              FontSize="14"
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
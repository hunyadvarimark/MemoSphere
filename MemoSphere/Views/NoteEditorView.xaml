<UserControl x:Class="WPF.Views.NoteEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPF.Utilities"
             xmlns:utilities="clr-namespace:WPF.Utilities"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="White">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- ✅ Ha nincs jegyzet betöltve, üres állapot üzenet -->
        <Border>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Note}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="NoteOutline" 
                                        Width="80" 
                                        Height="80" 
                                        Foreground="#BDBDBD"
                                        Margin="0,0,0,20"/>
                <TextBlock Text="Nincs megnyitott jegyzet" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          Foreground="#9E9E9E"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Válassz egy jegyzetet a listából vagy hozz létre újat" 
                          FontSize="14" 
                          Foreground="#BDBDBD"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ✅ Jegyzet szerkesztő - csak akkor látható, ha van betöltött jegyzet -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Note}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cím szerkesztő -->
            <Border Grid.Row="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,0,1" 
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="22"
                             FontWeight="SemiBold"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Foreground="#2C3E50">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="📝 Jegyzet címe..." 
                                                                  Foreground="#BDBDBD" 
                                                                  FontSize="22"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Autosave indicator -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CloudCheck" 
                                                Width="18" 
                                                Height="18" 
                                                Foreground="#4CAF50"
                                                Margin="0,0,5,0"/>
                        <TextBlock Text="Autosaved" 
                                  FontSize="12" 
                                  Foreground="#4CAF50"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tartalom szerkesztő -->
            <Border Grid.Row="1" Padding="20">
                <Grid>
                    <!-- SZERKESZTHETŐ MÓD: TextBox (kézzel írt jegyzetek) -->
                    <TextBox Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 BorderThickness="0"
                 Background="Transparent"
                 FontSize="15"
                 Foreground="#2C3E50"
                 Padding="2">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <!-- Ha Markdown/LaTeX content, rejtjük a TextBox-ot -->
                                    <DataTrigger Binding="{Binding IsMarkdownContent}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Top">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Kezdj el írni..." 
                                                      Foreground="#BDBDBD" 
                                                      FontSize="15"
                                                      Margin="2,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- OLVASÁSI MÓD: WebView2 (PDF import, Markdown/LaTeX) -->
                    <Border BorderThickness="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsMarkdownContent}" Value="True"/>
                                            <Condition Binding="{Binding DataContext.IsDialogOpen, RelativeSource={RelativeSource AncestorType=Window}}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <wv2:WebView2 x:Name="NoteContentWebView"
                  utilities:WebViewHelper.HtmlSource="{Binding Content}"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Action buttons -->
            <Border Grid.Row="2" 
        Background="#F8F9FA" 
        BorderBrush="#E0E0E0" 
        BorderThickness="0,1,0,0"
        Padding="20,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- ÚJ SOR a loading indicator-nak -->
                    </Grid.RowDefinitions>

                    <!-- Gombok -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- 1. PDF Import gomb (MEGLÉVŐ) -->
                        <Button Command="{Binding ImportPdfCommand}"
            Height="40"
            Padding="20,0"
            Margin="0,0,10,0"
            Background="#FF6F00"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6"
                                   Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F57C00"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#BDBDBD"/>
                                            <Setter Property="Cursor" Value="Arrow"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsImporting}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePdfBox" 
                                    Width="18" 
                                    Height="18" 
                                    VerticalAlignment="Center" 
                                    Margin="0,0,8,0"/>
                                <TextBlock Text="📄 PDF Import" 
                      VerticalAlignment="Center"
                      FontSize="14"
                      FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- 2. ✅ ÚJ: Toggle Edit Mode gomb -->
                        <Button Command="{Binding ToggleEditModeCommand}"
            Height="40"
            Padding="20,0"
            Margin="0,0,10,0"
            BorderThickness="0"
            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6"
                                   Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#388E3C"/>
                                        </Trigger>
                                        <!-- Ha szerkesztési módban vagyunk (NOT markdown), más szín -->
                                        <DataTrigger Binding="{Binding IsMarkdownContent}" Value="False">
                                            <Setter Property="Background" Value="#2196F3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Width="18" 
                                    Height="18" 
                                    VerticalAlignment="Center" 
                                    Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Kind" Value="Eye"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <!-- Ha szerkesztési módban (NOT markdown), pencil ikon -->
                                                <DataTrigger Binding="{Binding IsMarkdownContent}" Value="False">
                                                    <Setter Property="Kind" Value="Pencil"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <TextBlock VerticalAlignment="Center"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Foreground="White">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="👁️ Előnézet"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMarkdownContent}" Value="False">
                                                    <Setter Property="Text" Value="✏️ Szerkesztés"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <!-- 3. AI Kérdésgenerálás gomb (MEGLÉVŐ) -->
                        <Button Command="{Binding GenerateQuestionsCommand}"
            Height="40"
            Padding="20,0"
            Margin="0,0,10,0"
            Background="#9C27B0"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6"
                                   Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7B1FA2"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#BDBDBD"/>
                                            <Setter Property="Cursor" Value="Arrow"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AutoFix" 
                                    Width="18" 
                                    Height="18" 
                                    VerticalAlignment="Center" 
                                    Margin="0,0,8,0"/>
                                <TextBlock Text="🤖 AI Kérdésgenerálás" 
                      VerticalAlignment="Center"
                      FontSize="14"
                      FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- 4. Mentés gomb (MEGLÉVŐ) -->
                        <Button Command="{Binding SaveCommand}"
            Content="💾 Mentés"
            Height="40"
            Padding="25,0"
            Background="#2196F3"
            Foreground="White"
            FontSize="14"
            FontWeight="SemiBold"
            BorderThickness="0"
            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6"
                                   Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <!-- AI Kérdésgenerálás Loading Indicator -->
                        <Border Background="#E8EAF6" 
                    Padding="15" 
                    CornerRadius="6"
                    Margin="0,15,0,0"
                    BorderBrush="#5C6BC0"
                    BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                            Kind="Cog" 
                                            Width="24" 
                                            Height="24" 
                                            Foreground="#3F51B5"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0">
                                    <materialDesign:PackIcon.RenderTransform>
                                        <RotateTransform CenterX="12" CenterY="12"/>
                                    </materialDesign:PackIcon.RenderTransform>
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                   From="0"
                                                                   To="360"
                                                                   Duration="0:0:2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding GenerationStatus}" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#3F51B5"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>

                                    <ProgressBar IsIndeterminate="True" 
                                     Height="6" 
                                     Foreground="#5C6BC0"
                                     Background="#C5CAE9"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- PDF Import Loading Indicator -->
                        <Border Background="#FFF3E0" 
                    Padding="15" 
                    CornerRadius="6"
                    Margin="0,15,0,0"
                    BorderBrush="#FF6F00"
                    BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsImporting}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                            Kind="FilePdfBox" 
                                            Width="24" 
                                            Height="24" 
                                            Foreground="#FF6F00"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ImportStatus}" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#E65100"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>

                                    <ProgressBar IsIndeterminate="True" 
                                     Height="6" 
                                     Foreground="#FF6F00"
                                     Background="#FFE0B2"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Generált kérdések -->
            <Border Grid.Row="3" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0"
                    MaxHeight="300"
                    Visibility="{Binding HasQuestions, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="HelpCircle" 
                                                    Width="22" 
                                                    Height="22" 
                                                    Foreground="#FF5722" 
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Generált Kérdések" 
                                      FontSize="17" 
                                      FontWeight="Bold" 
                                      Foreground="#2C3E50" 
                                      VerticalAlignment="Center" 
                                      Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding DistinctQuestions.Count, StringFormat='({0})'}" 
                                      FontSize="14" 
                                      Foreground="#7E8BA3" 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding DistinctQuestions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                           BorderBrush="#E0E0E0" 
                                           BorderThickness="1" 
                                           CornerRadius="8" 
                                           Padding="16" 
                                           Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="14" 
                                                      Foreground="#2C3E50" 
                                                      TextWrapping="Wrap" 
                                                      Margin="0,0,0,12"/>

                                            <!-- Answers list -->
                                            <ItemsControl ItemsSource="{Binding Answers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                                            <Ellipse Width="6" 
                                                                    Height="6" 
                                                                    Margin="0,0,8,0" 
                                                                    VerticalAlignment="Center">
                                                                <Ellipse.Style>
                                                                    <Style TargetType="Ellipse">
                                                                        <Setter Property="Fill" Value="#3F51B5"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                                                <Setter Property="Fill" Value="#4CAF50"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Ellipse.Style>
                                                            </Ellipse>
                                                            <TextBlock TextWrapping="Wrap">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="#546E7A"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="{Binding Text, Mode=OneWay}"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
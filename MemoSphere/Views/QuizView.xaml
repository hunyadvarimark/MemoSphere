<UserControl x:Class="WPF.Views.QuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WPF.Utilities"
             xmlns:utilities="clr-namespace:WPF.Utilities"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="White">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding StatusText}" FontSize="16" FontWeight="SemiBold" Margin="0,0,20,0"/>
                <TextBlock Text="{Binding RemainingTimeText}" FontSize="16" Foreground="DarkRed"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1"
                Background="LightGreen"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,20"
                Visibility="{Binding IsQuizFinished,Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding ResultText}"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="2"
                Padding="20"
                CornerRadius="8"
                Background="WhiteSmoke">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding CurrentItem}">
                    <wv2:WebView2 x:Name="QuestionWebView"
                              MinHeight="100"
                              MaxHeight="250"
                              Margin="0,0,0,20"
                              utilities:WebViewHelper.HtmlSource="{Binding Question.Text}"/>    

                    <ListBox ItemsSource="{Binding AnswerOptions}"
                             SelectedItem="{Binding SelectedAnswer,Mode=TwoWay}"
                             BorderThickness="0"
                             Background="Transparent"
                             IsEnabled="{Binding IsAnswerSubmitted,Converter={StaticResource InverseBoolConverter}}"
                             SelectionMode="Single"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.Style>
                            <Style TargetType="ListBox">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShortAnswer}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,5,0,0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=DataContext.IsAnswerSubmitted,RelativeSource={RelativeSource AncestorType=ListBox}}" Value="True"/>
                                            <Condition Binding="{Binding IsCorrect}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=DataContext.IsAnswerSubmitted,RelativeSource={RelativeSource AncestorType=ListBox}}" Value="True"/>
                                            <Condition Binding="{Binding Path=IsSelected,RelativeSource={RelativeSource Self}}" Value="True"/>
                                            <Condition Binding="{Binding IsCorrect}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="LightPink"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10"
                                        Background="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type ListBoxItem}},Path=Background}"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Cursor="Hand">
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="16"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBox Text="{Binding UserAnswerText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             MinHeight="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             IsEnabled="{Binding IsAnswerSubmitted,Converter={StaticResource InverseBoolConverter}}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="BorderBrush" Value="LightGray"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShortAnswer}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAnswerSubmitted}" Value="True"/>
                                            <Condition Binding="{Binding IsCorrect}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAnswerSubmitted}" Value="True"/>
                                            <Condition Binding="{Binding IsCorrect}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="LightPink"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Border Padding="10"
                            Background="LightYellow"
                            BorderBrush="Orange"
                            BorderThickness="1"
                            CornerRadius="5"
                            Margin="0,15,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsShortAnswer}" Value="True"/>
                                            <Condition Binding="{Binding IsAnswerSubmitted}" Value="True"/>
                                            <Condition Binding="{Binding IsCorrect}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="Helyes válasz:"
                                       FontWeight="Bold"
                                       Foreground="DarkGreen"
                                       FontSize="14"/>

                            <TextBlock Text="{Binding SampleAnswer}"
                                       Foreground="Green"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="✓ Válasz beküldése"
                    Command="{Binding SubmitAnswerCommand}"
                    Width="160"
                    Height="45"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEvaluating}" Value="True">
                                <Setter Property="Content" Value="⏳ Értékelés..."/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="→ Következő"
                    Command="{Binding NavigateNextCommand}"
                    Width="140"
                    Height="45"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="🔄 Újrakezdés"
                    Command="{Binding RestartQuizCommand}"
                    Width="140"
                    Height="45"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Visibility="{Binding IsQuizFinished,Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
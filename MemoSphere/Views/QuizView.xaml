<UserControl x:Class="WPF.Views.QuizView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:WPF.Utilities" Background="White">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Eredmény border működik! Következő: Kérdés" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Border Grid.Row="1" Background="LightGreen" Padding="15" CornerRadius="5" Margin="0,0,0,20" Visibility="{Binding IsQuizFinished, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding ResultText}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="2" Padding="20" CornerRadius="8" Background="WhiteSmoke">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding CurrentItem}">
                    <TextBlock Text="{Binding Question.Text}" FontSize="18" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <ListBox ItemsSource="{Binding AnswerOptions}" 
                             SelectedItem="{Binding SelectedAnswerText, Mode=TwoWay}"
                             BorderThickness="0" 
                             Background="Transparent" 
                             IsEnabled="{Binding IsAnswerSubmitted, Converter={StaticResource InverseBoolConverter}}"
                             SelectionMode="Single"
                             HorizontalContentAlignment="Stretch">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,5,0,0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Cursor="Hand">
                                    <TextBlock Text="{Binding}" 
                                               FontSize="16"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </ScrollViewer>
        </Border>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="✓ Válasz beküldése" Command="{Binding SubmitAnswerCommand}" Width="160" Height="45" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button Content="→ Következő" Command="{Binding NavigateNextCommand}" Width="140" Height="45" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button Content="🔄 Újrakezdés" Command="{Binding RestartQuizCommand}" Width="140" Height="45" FontSize="14" FontWeight="Bold" Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand" Visibility="{Binding IsQuizFinished, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
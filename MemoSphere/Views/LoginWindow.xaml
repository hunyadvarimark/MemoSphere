<Window x:Class="MemoSphere.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MemoSphere - Login"
        Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="30,40,30,30">
            <StackPanel>
                <TextBlock Text="MemoSphere" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Generative Study Tool" 
                          FontSize="16" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Opacity="0.9"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    Margin="30,30,30,30" 
                    Padding="35,30,35,35"
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Sign In" 
                              FontSize="26" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,25"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                              FontSize="14" 
                              FontWeight="Medium"
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox"
                            Height="44"
                            Padding="12"
                            FontSize="14"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            VerticalContentAlignment="Center"
                            Margin="0,0,0,18">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             Margin="12,0"
                                                             VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Password -->
                    <TextBlock Text="Password" 
                              FontSize="14" 
                              FontWeight="Medium"
                              Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox"
                                Height="44"
                                Padding="12"
                                FontSize="14"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,10">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="White"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             Margin="12,0"
                                                             VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessage"
                              Foreground="#E53935"
                              FontSize="13"
                              TextWrapping="Wrap"
                              Margin="0,0,0,15"
                              Visibility="Collapsed"/>

                    <!-- Login Button -->
                    <Button Content="Sign In"
                           Height="48"
                           Background="#2196F3"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="SignInButton_Click"
                           Margin="0,5,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Divider -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                               Height="1" 
                               Background="#E0E0E0" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                        <TextBlock Grid.Column="1" 
                                  Text="OR" 
                                  FontSize="13" 
                                  Foreground="#999"
                                  VerticalAlignment="Center"/>

                        <Border Grid.Column="2" 
                               Height="1" 
                               Background="#E0E0E0" 
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    </Grid>

                    <!-- Google Sign In Button -->
                    <Button x:Name="GoogleSignInButton"
                           Height="48"
                           Background="White"
                           BorderBrush="#DADCE0"
                           BorderThickness="1"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="GoogleSignInButton_Click"
                           Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6">
                                                <StackPanel Orientation="Horizontal" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                    <!-- Google Icon -->
                                                    <Border Width="22" Height="22" 
                                                           Background="#4285F4"
                                                           CornerRadius="11"
                                                           Margin="0,0,12,0">
                                                        <TextBlock Text="G" 
                                                                  FontSize="15" 
                                                                  FontWeight="Bold"
                                                                  Foreground="White"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock>
                            <Run Text="Sign in with Google" Foreground="#3C4043"/>
                        </TextBlock>
                    </Button>

                    <!-- Sign Up Link -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0">
                        <TextBlock Text="Don't have an account? " 
                                  FontSize="14"
                                  Foreground="#666"/>
                        <TextBlock Text="Sign Up" 
                                  FontSize="14"
                                  Foreground="#2196F3"
                                  FontWeight="SemiBold"
                                  Cursor="Hand"
                                  MouseLeftButtonDown="SignUpLink_Click">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <TextBlock x:Name="LoadingIndicator"
                              Text="Signing in..."
                              FontSize="14"
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>